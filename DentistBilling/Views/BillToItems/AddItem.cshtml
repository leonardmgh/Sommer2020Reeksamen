@model DentistBilling.Models.BillToItem

@{
    ViewData["Title"] = "Add Billable Item";
}

<h1>Add Billable Item</h1>

<h4>Bill</h4>
<hr />
<div class="row" id="vueroot">
    <div class="col-md-4">
        <form asp-action="AddITem">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="BillID" />
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label class="control-label">Item ID</label>
                <select asp-for="ItemID" class="form-control" v-model="selected">
                    <option v-for="item in billableItems" :value="item.id">{{ item.description }}</option>

                </select>
                <span asp-validation-for="ItemID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Amount</label>
                <input type="number" asp-for="Counter" class="form-control">
                <span asp-validation-for="Counter" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
            <div class="form-group">
                <button type="button" class="btn btn-primary" v-on:click="showBillableItems()">Show Billable Item Details</button>
            </div>
        </form>
    </div>
    <partial name="/Views/Modal/BillableItemList.cshtml" />
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="/js/vue-bill.js"></script>
}
